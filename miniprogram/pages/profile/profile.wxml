<!--profile.wxml-->
<view class="container">
  <view class="content">
    <view class="stats-section">
      <text class="section-title">游戏统计</text>
      <view class="stats-grid">
        <view class="stat-item">
          <text class="stat-number">{{gameStats.totalGames}}</text>
          <text class="stat-label">总游戏数</text>
        </view>
        <view class="stat-item">
          <text class="stat-number">{{gameStats.completedGames}}</text>
          <text class="stat-label">完成游戏数</text>
        </view>
        <view class="stat-item">
          <text class="stat-number">{{gameStats.bestTime}}</text>
          <text class="stat-label">最佳用时</text>
        </view>
        <view class="stat-item">
          <text class="stat-number">{{gameStats.averageTime}}</text>
          <text class="stat-label">平均用时</text>
        </view>
      </view>
    </view>

    <view class="profile-section">
      <text class="section-title">开发者信息</text>
      <view class="info-item">
        <text class="info-label">邮箱</text>
        <text class="info-value">jinjiazh@qq.com</text>
      </view>
    </view>
  </view>
</view>