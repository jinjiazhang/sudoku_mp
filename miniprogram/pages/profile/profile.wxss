/**profile.wxss**/
page {
  height: 100vh;
  background-color: #f5f5f5;
}

.container {
  padding: 40rpx;
  min-height: 100vh;
  box-sizing: border-box;
}

.header {
  text-align: center;
  margin-bottom: 60rpx;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  color: #2E3A59;
}

.content {
  display: flex;
  flex-direction: column;
  gap: 40rpx;
}

.profile-section, .stats-section, .actions-section {
  background-color: white;
  padding: 40rpx;
  border-radius: 24rpx;
  box-shadow: 0 2rpx 16rpx rgba(0, 0, 0, 0.1);
}

.section-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 32rpx;
  display: block;
}

.info-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.info-item:last-child {
  border-bottom: none;
}

.info-label {
  font-size: 32rpx;
  color: #666;
}

.info-value {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
}

.stats-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 32rpx;
}

.stat-item {
  text-align: center;
  padding: 32rpx 16rpx;
  background-color: #f8f9fa;
  border-radius: 16rpx;
}

.stat-number {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #2196F3;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 28rpx;
  color: #666;
}

.actions-section {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.action-btn {
  background-color: #2196F3;
  color: white;
  padding: 32rpx;
  border-radius: 16rpx;
  font-size: 32rpx;
  font-weight: 600;
  border: none;
}

.action-btn.secondary {
  background-color: #f0f0f0;
  color: #333;
}