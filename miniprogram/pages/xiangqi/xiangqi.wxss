/* pages/xiangqi/xiangqi.wxss */
.page-container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #FAF8F5; /* Match Gomoku */
  position: relative;
}

/* Header Styles */
.status-header {
  padding: 30rpx 40rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.player-pill {
  display: flex;
  align-items: center;
  gap: 12rpx;
  padding: 8rpx 20rpx;
  border-radius: 40rpx;
  background: white;
  opacity: 0.5;
  transition: all 0.3s;
  box-shadow: 0 4rpx 10rpx rgba(0,0,0,0.05);
}

.player-pill.active {
  opacity: 1;
  background: #333;
  color: white;
  transform: scale(1.05);
  box-shadow: 0 8rpx 20rpx rgba(0,0,0,0.2);
}

.player-pill.active.red { background: #cc0000; color: white; }
.player-pill.active.black { background: #333; color: white; }

.stone-icon {
  width: 24rpx; height: 24rpx;
  border-radius: 50%;
  border: 1rpx solid #ccc;
}
.stone-icon.red { background: #cc0000; border-color: #cc0000; }
.stone-icon.black { background: #000; border-color: #000; }

.player-name { font-size: 26rpx; font-weight: 600; }
.game-info { display: flex; flex-direction: column; align-items: center; }
.status-text { font-size: 28rpx; font-weight: 700; color: #5D4037; margin-bottom: 4rpx; }

/* Board Area */
.board-area {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 20rpx;
}

.board-wrapper {
  position: relative;
  width: 96vw;
  max-width: 650px;
  height: 106.6vw; /* Aspect ratio 0.9 */
  max-height: 720px;
  aspect-ratio: 0.9;
  background-color: #eebb77;
  border: 4rpx solid #5a3a22; /* Outer heavy border */
  box-shadow: 0 20rpx 50rpx rgba(0,0,0,0.2);
  padding: 20rpx; /* Padding creates space between outer border and inner grid? No, standard Xiangqi has a margin. */
  box-sizing: border-box;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 12rpx;
}

.board {
  position: relative;
  width: 100%; height: 100%;
  display: flex; flex-direction: column;
}

/* Grid Lines */
.grid-lines {
  position: absolute;
  top: 20rpx; left: 20rpx; right: 20rpx; bottom: 20rpx;
  pointer-events: none;
  z-index: 0;
}

.h-line {
  position: absolute;
  left: calc(100% / 9 * 0.5);
  width: calc(100% / 9 * 8);
  height: 2rpx;
  background-color: #5D4037;
  transform: translateY(-50%);
}

.v-line {
  position: absolute;
  top: 5%;
  width: 2rpx;
  height: 40%;
  background-color: #5D4037;
  transform: translateX(-50%);
}

.v-line.bottom {
  top: 55%;
}

.v-line.full {
  height: 90%;
}

/* Palace Lines - Corrected Geometry */
/* Width of Palace = 22.22% (2 cols). Height = 20% (2 rows). */
/* Diagonal length ≈ 31.4%. Center Top: 15%, 50%. Center Bottom: 85%, 50%. */
/* Angle = 45 degrees. */

.palace-line {
  position: absolute;
  background-color: #5D4037;
  width: 31.5%;
  height: 2rpx;
  left: 50%;
  transform-origin: center;
}

/* River Text */
.river {
  position: absolute;
  top: 45%; left: 0; width: 100%; height: 10%;
  display: flex; /* Default row */
  align-items: center;
  font-size: 40rpx; color: #5D4037; 
  font-family: "KaiTi", "STKaiti", serif; 
  opacity: 0.9;
  line-height: 1;
  pointer-events: none; /* Let clicks pass through if needed */
}

.river-half {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  /* gap removed to bring words close together */
}

.board-row { display: flex; width: 100%; height: 10%; }
/* Ensure cell bounds are precise */
.cell {
  flex: 1; 
  position: relative; 
  display: flex; 
  justify-content: center; 
  align-items: center; 
  z-index: 10;
  box-sizing: border-box; /* Ensure padding/border doesn't shift content box */
}

.piece {
  width: 95%; height: 95%;
  border-radius: 50%;
  box-sizing: border-box; /* Critical for alignment when border exists */
  background: radial-gradient(circle at 30% 30%, #ffdcae, #dcb378); /* Wood-like gradient */
  box-shadow: 
    inset 0 1rpx 1rpx rgba(255,255,255,0.5), /* Top highlight */
    inset 0 -1rpx 1rpx rgba(0,0,0,0.1), /* Bottom shade */
    0 1rpx 1rpx rgba(0,0,0,0.15); /* Drop shadow */
  display: flex; justify-content: center; align-items: center;
  font-size: 28rpx; font-weight: bold; position: relative;
  font-family: "STKaiti", "KaiTi", "楷体", "Kaiti SC", serif;
  z-index: 2;
}

.piece::after { 
  content: ''; 
  position: absolute; 
  top: 10%; left: 10%; width: 80%; height: 80%;
  border: 1rpx solid rgba(0,0,0,0.15); 
  border-radius: 50%; 
}

.piece.red { 
  color: #c00; 
  text-shadow: 0 1px 0 rgba(255,255,255,0.4);
  background: radial-gradient(circle at 30% 30%, #ffdec0, #e0b090); /* Slightly lighter/redder wood for red? Or same wood? Standard is same wood, colored text. Let's keep wood uniform, just text color. */
  background: radial-gradient(circle at 30% 30%, #FDF3E0, #E6C898); /* Premium Wood */
  border: 4rpx solid #d4a971; /* Wood edge */
}

/* Specific styling for the carved text look */
.piece-text {
  /* We can wrap text in a view if we want simplified HTML logic, but current WXML puts text directly. */
  /* Just style .piece */
}

.piece.red {
  color: #D32F2F;
  text-shadow: 0 2rpx 0 rgba(255,255,255,0.5), 0 -1rpx 0 rgba(0,0,0,0.1);
}

.piece.black { 
  color: #212121;
  background: radial-gradient(circle at 30% 30%, #FDF3E0, #E6C898); /* Premium Wood */
  border: 4rpx solid #d4a971;
  text-shadow: 0 2rpx 0 rgba(255,255,255,0.5), 0 -1rpx 0 rgba(0,0,0,0.1);
}

.piece.last-move { 
  box-shadow: 0 0 0 4rpx rgba(255, 87, 34, 0.8), 2rpx 8rpx 16rpx rgba(0,0,0,0.5); 
  z-index: 3;
}

.last-move-from::before {
  content: '';
  position: absolute;
  width: 20rpx; height: 20rpx;
  background: rgba(255, 87, 34, 0.5);
  border-radius: 50%;
  box-shadow: 0 0 10rpx rgba(255, 87, 34, 0.5);
}

.selected::after { 
  content: '';
  position: absolute;
  border-color: #2196F3; 
  width: 90%; height: 90%; 
  top: 50%; left: 50%;
  transform: translate(-50%, -50%);
  border-radius: 50%;
  border-width: 4rpx; border-style: solid;
  animation: pulse-border 1.5s infinite;
  z-index: 5;
}

@keyframes pulse-border {
  0% { transform: translate(-50%, -50%) scale(1); opacity: 1; }
  50% { transform: translate(-50%, -50%) scale(1.05); opacity: 0.6; }
  100% { transform: translate(-50%, -50%) scale(1); opacity: 1; }
}

.controls-area { padding: 40rpx; display: flex; justify-content: center; gap: 80rpx; }
.tool-btn { display: flex; flex-direction: column; align-items: center; gap: 16rpx; font-size: 26rpx; color: #5D4037; }
.icon-circle { width: 100rpx; height: 100rpx; background: white; border-radius: 50%; display: flex; align-items: center; justify-content: center; font-size: 44rpx; box-shadow: 0 8rpx 16rpx rgba(93, 64, 55, 0.15); transition: all 0.2s; }
.tool-btn:active .icon-circle { background: #EFEBE9; transform: scale(0.95); }

/* Dialog */
.dialog-mask { position: fixed; top: 0; left: 0; right: 0; bottom: 0; background: rgba(0,0,0,0.6); z-index: 100; display: flex; align-items: center; justify-content: center; }
.result-card { background: white; width: 80%; max-width: 600rpx; border-radius: 40rpx; padding: 60rpx; display: flex; flex-direction: column; align-items: center; animation: popIn 0.3s ease; }
.result-icon { font-size: 100rpx; margin-bottom: 30rpx; }
.result-title { font-size: 48rpx; font-weight: 800; margin-bottom: 10rpx; color: #333; }
.result-actions { width: 100%; display: flex; flex-direction: column; gap: 24rpx; }
.action-btn { width: 100%; height: 100rpx; border-radius: 50rpx; font-weight: 600; display: flex; align-items: center; justify-content: center; }
.primary { background: #d64c4c; color: white; }
.secondary { background: #f0f0f0; color: #333; }

/* iPad */
@media (min-width: 768px) {
  .status-header { padding: 20px 30px; }
  .player-pill { padding: 6px 16px; border-radius: 30px; gap: 8px; }
  .stone-icon { width: 16px; height: 16px; }
  .player-name { font-size: 18px; }
  .status-text { font-size: 22px; }
  .board-wrapper { width: 85vw; max-width: 800px; height: 94.4vw; max-height: 888px; border-width: 6rpx; }
  .river { font-size: 48rpx; letter-spacing: 200rpx; }
  .piece { font-size: 50rpx; border-width: 6rpx; }
  .controls-area { padding: 30px; gap: 60px; }
  .tool-btn { gap: 10px; font-size: 18px; }
  .icon-circle { width: 64px; height: 64px; font-size: 32px; }
  .result-card { padding: 40px; max-width: 400px; width: 60%; }
  .result-icon { font-size: 64px; margin-bottom: 20px; }
  .result-title { font-size: 32px; }
  .action-btn { height: 60px; font-size: 20px; border-radius: 30px; }
}
