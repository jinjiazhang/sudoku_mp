/**gomoku-menu.wxss**/
page {
  height: 100vh;
  background-color: #f5f5f5;
  display: flex;
  flex-direction: column;
}

.container {
  flex: 1;
  display: flex;
  flex-direction: column;
  padding: 40rpx;
  box-sizing: border-box;
}

.header {
  margin-top: 60rpx;
  margin-bottom: 80rpx;
  text-align: center;
}

.title {
  font-size: 72rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 16rpx;
  letter-spacing: 4rpx;
}

.subtitle {
  font-size: 32rpx;
  color: #666;
  font-weight: 300;
}

.menu-options {
  display: flex;
  flex-direction: column;
  gap: 32rpx;
  align-items: center;
  width: 100%;
}

.menu-btn {
  width: 500rpx;
  height: 120rpx;
  border-radius: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 36rpx;
  font-weight: 600;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.15);
  transition: all 0.2s ease;
  position: relative;
  overflow: hidden;
}

.menu-btn:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.pve-btn {
  background: linear-gradient(135deg, #4FC3F7, #0288D1);
  color: white;
}

.pvp-btn {
  background: linear-gradient(135deg, #FFB74D, #F57C00);
  color: white;
}

.resume-btn {
  background: linear-gradient(135deg, #81C784, #388E3C);
  color: white;
}

/* 难度/颜色选择模态框 */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 100;
  display: flex;
  justify-content: center;
  align-items: center;
}

.modal-content {
  width: 600rpx;
  background-color: white;
  border-radius: 32rpx;
  padding: 48rpx;
  box-sizing: border-box;
  box-shadow: 0 16rpx 48rpx rgba(0, 0, 0, 0.2);
  transform: scale(0.9);
  animation: modalPop 0.2s ease forwards;
}

@keyframes modalPop {
  to {
    transform: scale(1);
  }
}

.modal-title {
  font-size: 40rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 48rpx;
  color: #333;
}

.choice-options {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.choice-btn {
  width: 100%;
  padding: 24rpx 0;
  border-radius: 16rpx;
  font-size: 32rpx;
  text-align: center;
  background-color: #f5f5f5;
  color: #333;
  transition: all 0.2s;
}

.choice-btn.black {
  background-color: #333;
  color: white;
  border: 2rpx solid #333;
}

.choice-btn.white {
  background-color: white;
  color: #333;
  border: 2rpx solid #ccc;
}

.choice-btn:active {
  opacity: 0.8;
}

.modal-close {
  margin-top: 32rpx;
  text-align: center;
  color: #999;
  font-size: 28rpx;
  padding: 16rpx;
}
