<!--index.wxml-->
<view class="container">
  <view class="header">
    <text class="title">小游戏合集</text>
    <text class="subtitle">选择一个游戏开始</text>
  </view>

  <view class="game-list">
    <!-- 数独游戏卡片 -->
    <view class="game-card" bindtap="navigateToSudoku">
      <view class="game-icon">🔢</view>
      <view class="game-info">
        <text class="game-name">数独</text>
        <text class="game-desc">经典数字逻辑游戏</text>
      </view>
      <view class="game-arrow">›</view>
    </view>

    <!-- 五子棋游戏卡片 -->
    <view class="game-card" bindtap="navigateToGomoku">
      <view class="game-icon">⚫</view>
      <view class="game-info">
        <text class="game-name">五子棋</text>
        <text class="game-desc">人机对战策略游戏</text>
      </view>
      <view class="game-arrow">›</view>
    </view>
  </view>

  <!-- 底部 -->
  <view class="footer">
    <button class="profile-btn" bindtap="navigateToProfile">个人中心</button>
  </view>
</view>
