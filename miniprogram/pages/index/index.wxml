<!--index.wxml-->
<view class="page-container">
  <view class="hero-section">
    <view class="hero-content">
      <text class="app-title">智力挑战</text>
      <text class="app-subtitle">每天一点脑力激荡</text>
    </view>
    <view class="hero-decoration"></view>
  </view>

  <view class="content-area">
    <view class="section-title">热门游戏</view>
    
    <view class="game-grid">
      <!-- 五子棋 -->
      <view class="game-card gomoku-card" bindtap="navigateToGomoku">
        <view class="card-bg-decoration"></view>
        <view class="card-content">
          <view class="icon-box">
             <view class="gomoku-icon-graphic">
               <view class="g-stone black"></view>
               <view class="g-stone white"></view>
             </view>
          </view>
          <view class="text-box">
            <text class="game-name">五子棋</text>
            <text class="game-desc">黑白博弈，连珠制胜</text>
          </view>
        </view>
        <view class="play-arrow-btn">➜</view>
      </view>

      <!-- 围棋 -->
      <view class="game-card go-card" bindtap="navigateToGo">
        <view class="card-bg-decoration"></view>
        <view class="card-content">
          <view class="icon-box">
             <view class="go-icon-graphic">
               <view class="mini-grid-line h1"></view><view class="mini-grid-line h2"></view>
               <view class="mini-grid-line v1"></view><view class="mini-grid-line v2"></view>
               <view class="g-stone black"></view>
               <view class="g-stone white"></view>
             </view>
          </view>
          <view class="text-box">
            <text class="game-name">围棋</text>
            <text class="game-desc">纵横十九路，千古奇局</text>
          </view>
        </view>
        <view class="play-arrow-btn">➜</view>
      </view>

      <!-- 数独 -->
      <view class="game-card sudoku-card" bindtap="navigateToSudoku">
        <view class="card-bg-decoration"></view>
        <view class="card-content">
          <view class="icon-box">
            <view class="sudoku-icon-graphic">
              <view class="s-cell"></view><view class="s-cell filled"></view><view class="s-cell"></view>
              <view class="s-cell filled"></view><view class="s-cell"></view><view class="s-cell filled"></view>
              <view class="s-cell"></view><view class="s-cell filled"></view><view class="s-cell"></view>
            </view>
          </view>
          <view class="text-box">
            <text class="game-name">数独</text>
            <text class="game-desc">逻辑推理，数字迷宫</text>
          </view>
        </view>
        <view class="play-arrow-btn">➜</view>
      </view>

    </view>
  </view>

  <!-- 底部功能 -->
  <view class="footer-area">
    <view class="footer-card" bindtap="navigateToProfile">
      <text class="icon">👤</text>
      <text>个人中心</text>
    </view>
  </view>
</view>
