/**index.wxss**/
page {
  height: 100vh;
  background-color: #f5f5f5;
}

.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  padding: 40rpx;
  box-sizing: border-box;
  justify-content: space-between;
}

.header {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 60rpx;
  padding-bottom: 40rpx;
}

.title {
  font-size: 64rpx;
  font-weight: bold;
  color: #2E3A59;
  margin-bottom: 16rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #999;
  font-weight: 400;
}

/* 游戏列表 */
.game-list {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 24rpx;
  padding: 20rpx 0;
}

/* 游戏卡片 */
.game-card {
  display: flex;
  align-items: center;
  background-color: white;
  padding: 32rpx;
  border-radius: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

.game-card:active {
  background-color: #f8f9fa;
  transform: scale(0.98);
}

.game-icon {
  font-size: 64rpx;
  width: 100rpx;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #f0f4ff;
  border-radius: 20rpx;
  margin-right: 24rpx;
}

.game-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.game-name {
  font-size: 36rpx;
  font-weight: 600;
  color: #2E3A59;
}

.game-desc {
  font-size: 26rpx;
  color: #999;
}

.game-arrow {
  font-size: 48rpx;
  color: #ccc;
  font-weight: 300;
}

/* 底部导航 */
.footer {
  display: flex;
  justify-content: center;
  padding-bottom: 40rpx;
}

.profile-btn {
  background-color: transparent;
  color: #666;
  font-size: 28rpx;
  border: none;
  text-decoration: underline;
  white-space: nowrap;
}
