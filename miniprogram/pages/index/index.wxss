/**index.wxss**/
page {
  height: 100vh;
  background-color: #f5f5f5;
}

.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  padding: 40rpx;
  box-sizing: border-box;
}

.header {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 200rpx;
  margin-bottom: 400rpx;
}

.title {
  font-size: 72rpx;
  font-weight: bold;
  color: #2E3A59;
  margin-bottom: 16rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #999;
}

.main {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.ongoing-game, .new-game {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.continue-btn {
  background-color: #2196F3;
  color: white;
  padding: 32rpx;
  border-radius: 50rpx;
  font-size: 36rpx;
  font-weight: 600;
  border: none;
}

.restart-btn, .start-btn {
  background-color: white;
  color: #2196F3;
  padding: 32rpx;
  border-radius: 50rpx;
  font-size: 36rpx;
  font-weight: 600;
  border: 2rpx solid #E0E0E0;
}

.difficulty-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 40rpx;
}

.difficulty-label {
  font-size: 32rpx;
  font-weight: 600;
  color: #2E3A59;
  margin-bottom: 40rpx;
}

.difficulty-slider {
  width: 100%;
}
