/**go-menu.wxss**/
.page-container {
  display: flex;
  flex-direction: column;
  background-color: #FAF8F5; /* Warm background */
  min-height: 100vh;
  padding-top: 60rpx;
}

.hero-header {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 60rpx;
}

.game-icon-graphic {
  width: 180rpx;
  height: 180rpx;
  margin-bottom: 20rpx;
  background: white;
  border-radius: 50%;
  box-shadow: 0 12rpx 32rpx rgba(139, 69, 19, 0.15);
  position: relative;
  overflow: hidden;
  border: 4rpx solid #fff;
}

/* Grid lines for icon */
.grid-line {
  position: absolute;
  background: #E0E0E0;
}
.grid-line.h1 { top: 33%; left: 10%; right: 10%; height: 2rpx; }
.grid-line.h2 { top: 66%; left: 10%; right: 10%; height: 2rpx; }
.grid-line.v1 { left: 33%; top: 10%; bottom: 10%; width: 2rpx; }
.grid-line.v2 { left: 66%; top: 10%; bottom: 10%; width: 2rpx; }

.g-stone {
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  position: absolute;
  box-shadow: 2rpx 4rpx 8rpx rgba(0,0,0,0.3);
}

.g-stone.black {
  background: radial-gradient(circle at 30% 30%, #444, #000);
  top: 25rpx; left: 25rpx;
  z-index: 2;
}

.g-stone.white {
  background: radial-gradient(circle at 30% 30%, #fff, #ddd);
  bottom: 25rpx; right: 25rpx;
  z-index: 1;
  border: 1rpx solid #ccc;
}

.game-title {
  font-size: 56rpx;
  font-weight: 800;
  color: #5D4037;
  letter-spacing: 4rpx;
  margin-bottom: 12rpx;
}

.game-subtitle {
  font-size: 28rpx;
  color: #8D6E63;
  letter-spacing: 2rpx;
}

.menu-content {
  padding: 0 40rpx;
  display: flex;
  flex-direction: column;
  gap: 32rpx;
}

.menu-card {
  height: 200rpx;
  border-radius: 32rpx;
  padding: 40rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: relative;
  overflow: hidden;
  box-shadow: 0 12rpx 24rpx rgba(0,0,0,0.08);
  transition: all 0.2s;
}

.menu-card:active {
  transform: scale(0.98);
  box-shadow: 0 6rpx 16rpx rgba(0,0,0,0.06);
}

.menu-card.resume {
  background: white;
  border: 2rpx solid #EFEBE9;
}

.menu-card.pve {
  background: linear-gradient(135deg, #8D6E63, #5D4037);
  color: white;
}

.menu-card.pvp {
  background: linear-gradient(135deg, #A1887F, #795548);
  color: white;
}

.card-bg-circle {
  position: absolute;
  width: 300rpx;
  height: 300rpx;
  border-radius: 50%;
  background: rgba(255,255,255,0.1);
  right: -60rpx;
  top: -60rpx;
}

.card-left {
  display: flex;
  flex-direction: column;
  z-index: 2;
}

.card-main-text {
  font-size: 40rpx;
  font-weight: 700;
  margin-bottom: 8rpx;
}

.resume .card-main-text { color: #5D4037; }
.resume .card-sub-text { color: #8D6E63; }

.card-sub-text {
  font-size: 26rpx;
  opacity: 0.9;
}

.icon-circle {
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
  background: rgba(255,255,255,0.25);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  z-index: 2;
}

.resume .icon-circle {
  background: #F5F5F5;
}

/* Modal */
.modal-mask {
  position: fixed;
  top: 0; left: 0; right: 0; bottom: 0;
  background: rgba(0,0,0,0.6);
  z-index: 100;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-card {
  width: 90%;
  max-width: 600rpx;
  background: white;
  border-radius: 40rpx;
  padding: 48rpx;
  display: flex;
  flex-direction: column;
  transform: scale(0.9);
  animation: modalPop 0.2s ease forwards;
}

@keyframes modalPop {
  to { transform: scale(1); }
}

.modal-header {
  font-size: 40rpx;
  font-weight: 800;
  color: #333;
  text-align: center;
  margin-bottom: 48rpx;
}

.choice-grid {
  display: flex;
  gap: 20rpx;
}

.choice-item {
  flex: 1;
  background: #F5F5F5;
  border-radius: 24rpx;
  padding: 24rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
}

.choice-item:active {
  background: #E0E0E0;
}

.size-preview {
  width: 80rpx;
  height: 80rpx;
  border: 2rpx solid #ccc;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: bold;
  font-size: 32rpx;
  color: #666;
  background: #fff;
}

.size-preview.s9 {
  background-image: linear-gradient(0deg, transparent 48%, #ccc 49%, #ccc 51%, transparent 52%),
                    linear-gradient(90deg, transparent 48%, #ccc 49%, #ccc 51%, transparent 52%);
  background-size: 20rpx 20rpx;
}

.size-preview.s13 {
  background-image: linear-gradient(0deg, transparent 48%, #ccc 49%, #ccc 51%, transparent 52%),
                    linear-gradient(90deg, transparent 48%, #ccc 49%, #ccc 51%, transparent 52%);
  background-size: 15rpx 15rpx;
}

.size-preview.s19 {
  background-image: linear-gradient(0deg, transparent 48%, #ccc 49%, #ccc 51%, transparent 52%),
                    linear-gradient(90deg, transparent 48%, #ccc 49%, #ccc 51%, transparent 52%);
  background-size: 10rpx 10rpx;
}

.choice-title {
  font-size: 24rpx;
  font-weight: 600;
  color: #555;
  text-align: center;
}

.modal-cancel {
  margin-top: 40rpx;
  text-align: center;
  color: #999;
  font-size: 28rpx;
  padding: 20rpx;
}

/* iPad 适配 */
@media (min-width: 768px) {
  .hero-header { margin-bottom: 40px; }
  
  .game-icon-graphic {
    width: 120px; height: 120px;
    margin-bottom: 20px;
  }
  
  .g-stone { width: 50px; height: 50px; }
  .g-stone.black { top: 20px; left: 20px; }
  .g-stone.white { bottom: 20px; right: 20px; }
  
  .game-title { font-size: 40px; margin-bottom: 10px; }
  .game-subtitle { font-size: 20px; }
  
  .menu-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 30px;
    padding: 0 40px;
  }
  
  .menu-card.resume { grid-column: span 2; }
  
  .menu-card {
    height: 160px;
    padding: 30px;
    border-radius: 20px;
  }
  
  .card-main-text { font-size: 28px; margin-bottom: 6px; }
  .card-sub-text { font-size: 18px; }
  
  .icon-circle {
    width: 60px; height: 60px;
    font-size: 28px;
  }
  
  .modal-card {
    max-width: 500px;
    padding: 40px;
  }
  
  .modal-header { font-size: 28px; margin-bottom: 30px; }
  
  .size-preview { width: 60px; height: 60px; font-size: 24px; }
  .choice-title { font-size: 20px; }
}
