/* pages/xiangqi-menu/xiangqi-menu.wxss */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 100rpx;
  height: 100vh;
  box-sizing: border-box;
  background-color: #f8f8f8;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 100rpx;
  color: #333;
}

.menu-list {
  width: 80%;
  display: flex;
  flex-direction: column;
  gap: 40rpx;
}

.menu-btn {
  width: 100%;
  padding: 20rpx 0;
  border-radius: 50rpx;
  font-size: 32rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.primary {
  background-color: #d64c4c;
  color: white;
}

.secondary {
  background-color: #ffffff;
  color: #333;
  border: 2rpx solid #ddd;
}
