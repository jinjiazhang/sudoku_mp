/**gomoku.wxss**/
.page-container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #FAF8F5; /* Warmer tone for wood board */
}

.status-header {
  padding: 30rpx 40rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.player-pill {
  display: flex;
  align-items: center;
  gap: 12rpx;
  padding: 8rpx 20rpx;
  border-radius: 40rpx;
  background: white;
  opacity: 0.5;
  transition: all 0.3s;
  box-shadow: 0 4rpx 10rpx rgba(0,0,0,0.05);
}

.player-pill.active-black {
  opacity: 1;
  background: #333;
  color: white;
  transform: scale(1.05);
  box-shadow: 0 8rpx 20rpx rgba(0,0,0,0.2);
}

.player-pill.active-white {
  opacity: 1;
  background: #fff;
  border: 1rpx solid #ccc;
  transform: scale(1.05);
  box-shadow: 0 8rpx 20rpx rgba(0,0,0,0.1);
}

.stone-icon {
  width: 24rpx;
  height: 24rpx;
  border-radius: 50%;
}

.stone-icon.black { background: black; }
.stone-icon.white { background: white; border: 1rpx solid #ccc; }

.player-name {
  font-size: 26rpx;
  font-weight: 600;
}

.game-info {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.status-text {
  font-size: 28rpx;
  font-weight: 700;
  color: #5D4037;
  margin-bottom: 4rpx;
}

.timer {
  font-size: 24rpx;
  color: #8D6E63;
  font-family: monospace;
}

.board-area {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 20rpx;
}

.gomoku-board {
  width: 92vw;
  max-width: 650px; /* Constrain for iPad */
  aspect-ratio: 1;
  background-color: #DEB887;
  border-radius: 16rpx;
  position: relative;
  box-shadow: 0 20rpx 50rpx rgba(0, 0, 0, 0.2);
  padding: 10rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
}

.board-row {
  display: flex;
  flex: 1;
}

.cell {
  flex: 1;
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
}

/* Grid lines logic (SAME AS BEFORE) */
.line {
  position: absolute;
  background-color: #8B4513;
}

.line.horizontal {
  height: 2rpx;
  left: 0; right: 0; top: 50%;
  transform: translateY(-50%);
}

.line.vertical {
  width: 2rpx;
  top: 0; bottom: 0; left: 50%;
  transform: translateX(-50%);
}

.cell.left .line.horizontal { left: 50%; }
.cell.top-left .line.horizontal { left: 50%; }
.cell.bottom-left .line.horizontal { left: 50%; }

.cell.right .line.horizontal { right: 50%; }
.cell.top-right .line.horizontal { right: 50%; }
.cell.bottom-right .line.horizontal { right: 50%; }

.cell.top .line.vertical { top: 50%; }
.cell.top-left .line.vertical { top: 50%; }
.cell.top-right .line.vertical { top: 50%; }

.cell.bottom .line.vertical { bottom: 50%; }
.cell.bottom-left .line.vertical { bottom: 50%; }
.cell.bottom-right .line.vertical { bottom: 50%; }

.star-point {
  position: absolute;
  width: 12rpx; height: 12rpx;
  background-color: #8B4513;
  border-radius: 50%;
  z-index: 1;
}

/* 棋子 */
.stone {
  width: 90%; height: 90%;
  border-radius: 50%;
  position: relative;
  z-index: 2;
  box-shadow: 2rpx 4rpx 8rpx rgba(0, 0, 0, 0.3);
}

.stone.black {
  background: radial-gradient(circle at 35% 35%, #666, #000);
}

.stone.white {
  background: radial-gradient(circle at 35% 35%, #fff, #e0e0e0);
}

.stone.last-move::after {
  content: '';
  position: absolute;
  top: 50%; left: 50%;
  transform: translate(-50%, -50%);
  width: 20%; height: 20%;
  background-color: #ff4444;
  border-radius: 50%;
}

.stone.winning {
  animation: pulse 0.8s infinite alternate;
}

@keyframes pulse {
  from { transform: scale(0.95); opacity: 0.8; }
  to { transform: scale(1.05); opacity: 1; }
}

.controls-area {
  padding: 40rpx;
  display: flex;
  justify-content: center;
  gap: 80rpx;
}

.tool-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
  font-size: 26rpx;
  color: #5D4037;
}

.tool-btn.disabled {
  opacity: 0.5;
}

.icon-circle {
  width: 100rpx; height: 100rpx;
  background: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 44rpx;
  box-shadow: 0 8rpx 16rpx rgba(93, 64, 55, 0.15);
  transition: all 0.2s;
}

.tool-btn:active .icon-circle {
  background: #EFEBE9;
  transform: scale(0.95);
}

/* Dialog */
.dialog-mask {
  position: fixed;
  top: 0; left: 0; right: 0; bottom: 0;
  background: rgba(0,0,0,0.6);
  z-index: 100;
  display: flex;
  align-items: center;
  justify-content: center;
}

.result-card {
  background: white;
  width: 80%;
  max-width: 600rpx;
  border-radius: 40rpx;
  padding: 60rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  animation: popIn 0.3s ease;
}

.result-icon { font-size: 100rpx; margin-bottom: 30rpx; }
.result-title { font-size: 48rpx; font-weight: 800; margin-bottom: 10rpx; color: #333; }
.result-time { font-size: 28rpx; color: #888; margin-bottom: 50rpx; }

.result-actions { width: 100%; display: flex; flex-direction: column; gap: 24rpx; }
.action-btn { width: 100%; height: 100rpx; border-radius: 50rpx; font-weight: 600; display: flex; align-items: center; justify-content: center; }

/* iPad 适配 */
@media (min-width: 768px) {
  .status-header { padding: 20px 30px; }
  
  .player-pill {
    padding: 6px 16px;
    border-radius: 30px;
    gap: 8px;
  }
  
  .stone-icon { width: 16px; height: 16px; }
  .player-name { font-size: 18px; }
  
  .status-text { font-size: 22px; }
  .timer { font-size: 16px; }
  
  /* Remove max-width limit on board area locally if page-container handles it, 
     but actually gomoku-board had max-width: 650px. 
     Let's tighten it to be safe or ensure it uses px properly */
  .gomoku-board {
    max-width: 800px; /* Ensure 800px max */
    padding: 12px;
    border-radius: 12px;
  }
  
  .controls-area {
    padding: 30px;
    gap: 60px;
  }
  
  .tool-btn { gap: 10px; font-size: 18px; }
  
  .icon-circle {
    width: 64px; height: 64px;
    font-size: 32px;
  }
  
  .result-card {
    padding: 40px;
    max-width: 400px;
    width: 60%;
  }
  
  .result-icon { font-size: 64px; margin-bottom: 20px; }
  .result-title { font-size: 32px; }
  .result-time { font-size: 18px; margin-bottom: 30px; }
  .action-btn { height: 60px; font-size: 20px; border-radius: 30px; }
}
