/**gomoku.wxss**/
page {
  height: 100vh;
  background-color: #f5f5f5;
}

.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  padding: 20rpx;
  box-sizing: border-box;
}

/* 状态栏 */
.status-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 10rpx;
}

.status-item {
  background-color: white;
  padding: 16rpx 32rpx;
  border-radius: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.status-label {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.time-display {
  font-size: 28rpx;
  color: #666;
  font-family: 'SF Pro Display', -apple-system, system-ui, sans-serif;
}

/* 棋盘容器 */
/* 棋盘容器 */
.board-container {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 20rpx;
}

.gomoku-board {
  width: calc(100vw - 60rpx);
  max-width: 700rpx;
  aspect-ratio: 1;
  background-color: #DEB887;
  border-radius: 8rpx;
  position: relative;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.15);
  padding: 10rpx; /* 给边缘留一点点空隙，更像真实棋盘 */
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
}

.board-row {
  display: flex;
  flex: 1;
}

.cell {
  flex: 1;
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
}

/* 网格线基础样式 */
.line {
  position: absolute;
  background-color: #8B4513;
}

.line.horizontal {
  height: 2rpx;
  left: 0;
  right: 0;
  top: 50%;
  transform: translateY(-50%);
}

.line.vertical {
  width: 2rpx;
  top: 0;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
}

/* 边缘处理：使得线段只画到中心点 */
/* 左边缘：横线从中心开始画到右边 */
.cell.left .line.horizontal,
.cell.top-left .line.horizontal,
.cell.bottom-left .line.horizontal {
  left: 50%;
}

/* 右边缘：横线从左边画到中心 */
.cell.right .line.horizontal,
.cell.top-right .line.horizontal,
.cell.bottom-right .line.horizontal {
  right: 50%;
}

/* 上边缘：竖线从中心画到下边 */
.cell.top .line.vertical,
.cell.top-left .line.vertical,
.cell.top-right .line.vertical {
  top: 50%;
}

/* 下边缘：竖线从上边画到中心 */
.cell.bottom .line.vertical,
.cell.bottom-left .line.vertical,
.cell.bottom-right .line.vertical {
  bottom: 50%;
}

/* 星位点 */
.star-point {
  position: absolute;
  width: 12rpx;
  height: 12rpx;
  background-color: #8B4513;
  border-radius: 50%;
  z-index: 1;
}

/* 棋子 */


/* 棋子 */
.stone {
  width: 88%;
  height: 88%;
  border-radius: 50%;
  position: relative;
  box-shadow: 2rpx 2rpx 6rpx rgba(0, 0, 0, 0.3);
}

.stone.black {
  background: radial-gradient(circle at 30% 30%, #666, #000);
}

.stone.white {
  background: radial-gradient(circle at 30% 30%, #fff, #ddd);
  border: 1rpx solid #ccc;
}

.stone.last-move::after {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 20%;
  height: 20%;
  border-radius: 50%;
  background-color: #ff4444;
}

.stone.winning {
  animation: pulse 0.5s ease-in-out infinite alternate;
}

@keyframes pulse {
  from {
    transform: scale(1);
  }
  to {
    transform: scale(1.1);
  }
}

/* 工具栏 */
.toolbar {
  display: flex;
  justify-content: center;
  gap: 40rpx;
  padding: 40rpx 0;
}

.tool-button {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  width: 240rpx;
  height: 88rpx;
  border-radius: 44rpx;
  background: linear-gradient(145deg, #A0522D, #8B4513);
  box-shadow: 0 6rpx 12rpx rgba(0, 0, 0, 0.2);
  color: #fff;
  transition: all 0.2s ease;
}

.tool-button:active:not(.disabled) {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.2);
  background: linear-gradient(145deg, #8B4513, #A0522D);
}

.tool-button.disabled {
  background: #D2B48C;
  opacity: 0.6;
  box-shadow: none;
  color: rgba(255, 255, 255, 0.8);
}

.tool-icon {
  font-size: 36rpx;
  margin-right: 12rpx;
  margin-bottom: 0;
}

.tool-label {
  font-size: 30rpx;
  font-weight: 500;
  color: #fff;
  letter-spacing: 2rpx;
}

/* 对话框样式 */
.dialog-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
}

.complete-dialog {
  padding: 48rpx;
  border-radius: 40rpx;
  width: 600rpx;
  max-width: 90vw;
  text-align: center;
  color: white;
  position: relative;
  overflow: hidden;
}

.complete-dialog.win {
  background: linear-gradient(135deg, #4FC3F7, #29B6F6, #03A9F4);
}

.complete-dialog.lose {
  background: linear-gradient(135deg, #90A4AE, #78909C, #607D8B);
}

.complete-dialog.draw {
  background: linear-gradient(135deg, #FFD54F, #FFC107, #FFB300);
}

.result-icon {
  font-size: 120rpx;
  margin-bottom: 24rpx;
  display: block;
}

.dialog-title {
  font-size: 56rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 16rpx;
  display: block;
}

.dialog-subtitle {
  font-size: 32rpx;
  color: rgba(255, 255, 255, 0.9);
  margin-bottom: 40rpx;
  display: block;
}

.dialog-buttons {
  display: flex;
  gap: 16rpx;
}

.dialog-btn {
  flex: 1;
  padding: 24rpx 16rpx;
  border-radius: 50rpx;
  font-size: 32rpx;
  font-weight: 600;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
}

.dialog-btn.primary {
  background-color: white;
  color: #333;
}

.dialog-btn.secondary {
  background-color: rgba(255, 255, 255, 0.2);
  color: white;
}

.btn-icon {
  font-size: 32rpx;
}
