/**sudoku.wxss**/
.page-container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #F8F9FA;
  padding-bottom: env(safe-area-inset-bottom);
}

.header-bar {
  padding: 20rpx 40rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.badge-pill {
  background: white;
  padding: 12rpx 24rpx;
  border-radius: 40rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.05);
  font-size: 28rpx;
  display: flex;
  align-items: center;
  gap: 12rpx;
  color: #555;
}

.badge-pill.time {
  background: #EBF8FF;
  color: #2B6CB0;
  font-family: monospace;
  font-weight: 700;
  font-size: 32rpx;
}

.board-area {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 20rpx;
}

.sudoku-board {
  width: 92vw;
  max-width: 600px; /* Limit max width for iPad */
  aspect-ratio: 1;
  background-color: #333;
  padding: 4rpx;
  border-radius: 12rpx;
  display: flex;
  flex-wrap: wrap;
  box-shadow: 0 12rpx 32rpx rgba(0,0,0,0.15);
}

.sub-grid {
  width: 33.333%;
  height: 33.333%;
  background-color: #333;
  display: flex;
  flex-wrap: wrap;
  border: 2rpx solid #333;
  box-sizing: border-box;
}

.cell {
  width: 33.333%;
  height: 33.333%;
  background-color: #fff;
  border: 1rpx solid #e0e0e0;
  box-sizing: border-box;
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
  font-size: 40rpx;
  color: #333;
}

/* 适配大屏字体 */
@media (min-width: 768px) {
  .cell {
    font-size: 48rpx;
  }
}

/* 选中样式 */
.cell.selected {
  background-color: #BEE3F8;
}

.cell.related {
  background-color: #EBF8FF;
}

.cell.same-value {
  background-color: #90CDF4;
}

.cell.error {
  background-color: #FED7D7;
  color: #C53030;
}

.cell-text.initial {
  font-weight: 700;
  color: #2C3E50;
}

.cell-text.user-input {
  color: #3182CE;
}

.cell-notes {
  width: 100%;
  height: 100%;
}

.note-grid {
  width: 100%;
  height: 100%;
  padding: 4rpx;
  display: flex;
  flex-wrap: wrap;
}

.note-position {
  width: 33.33%;
  height: 33.33%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 18rpx;
  color: #718096;
  visibility: hidden;
}

.note-position.visible {
  visibility: visible;
}

/* 控制区域 */
.controls-area {
  background: white;
  padding: 30rpx 40rpx;
  border-top-left-radius: 40rpx;
  border-top-right-radius: 40rpx;
  box-shadow: 0 -4rpx 20rpx rgba(0,0,0,0.03);
}

.toolbar {
  display: flex;
  justify-content: space-around;
  margin-bottom: 30rpx;
}

.tool-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  position: relative;
  font-size: 24rpx;
  color: #666;
  opacity: 1;
}

.tool-btn.disabled {
  opacity: 0.4;
}

.icon-circle {
  width: 88rpx;
  height: 88rpx;
  border-radius: 30rpx;
  background: #F7FAFC;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  transition: all 0.2s;
}

.tool-btn:active .icon-circle {
  background: #E2E8F0;
  transform: scale(0.95);
}

.icon-circle.active-bg {
  background: #3182CE;
  color: white;
}

.status-dot {
  width: 12rpx;
  height: 12rpx;
  background: #48BB78;
  border-radius: 50%;
  position: absolute;
  top: 10rpx;
  right: 10rpx;
  display: none;
}

.status-dot.on {
  display: block;
}

.count-badge {
  position: absolute;
  top: -6rpx;
  right: -6rpx;
  background: #E53E3E;
  color: white;
  font-size: 20rpx;
  width: 32rpx;
  height: 32rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.number-keyboard {
  display: flex;
  justify-content: space-between;
}

.key-btn {
  width: 10%; /* slightly less than 11.11% for gap */
  aspect-ratio: 0.8;
  background: #EDF2F7;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 44rpx;
  color: #2D3748;
  font-weight: 500;
  box-shadow: 0 4rpx 0 #CBD5E0;
}

.key-btn:active {
  transform: translateY(4rpx);
  box-shadow: none;
}

/* 弹窗样式 */
.dialog-mask {
  position: fixed;
  top: 0; left: 0; right: 0; bottom: 0;
  background: rgba(0,0,0,0.6);
  z-index: 100;
  display: flex;
  align-items: center;
  justify-content: center;
}

.complete-card {
  width: 80%;
  max-width: 600rpx;
  background: white;
  border-radius: 40rpx;
  padding: 60rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  animation: popIn 0.3s ease;
}

@keyframes popIn {
  from { transform: scale(0.9); opacity: 0; }
  to { transform: scale(1); opacity: 1; }
}

.celebrate-icon {
  font-size: 100rpx;
  margin-bottom: 30rpx;
}

.dialog-title {
  font-size: 48rpx;
  font-weight: 800;
  color: #2D3748;
  margin-bottom: 40rpx;
}

.result-stats {
  width: 100%;
  display: flex;
  background: #F7FAFC;
  padding: 30rpx;
  border-radius: 20rpx;
  justify-content: space-around;
  margin-bottom: 60rpx;
}

.stat-box {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-divider {
  width: 2rpx;
  background: #E2E8F0;
}

.stat-box .label {
  font-size: 24rpx;
  color: #718096;
}

.stat-box .val {
  font-size: 36rpx;
  font-weight: 700;
  color: #2D3748;
  margin-top: 8rpx;
}

.action-buttons {
  width: 100%;
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.action-btn {
  width: 100%;
  padding: 24rpx;
  border-radius: 50rpx;
  font-size: 32rpx;
  font-weight: 600;
  display: flex;
  justify-content: center;
  align-items: center;
}

.action-btn.primary {
  background: #3182CE;
  color: white;
  box-shadow: 0 8rpx 20rpx rgba(49, 130, 206, 0.3);
}


/* iPad 适配 */
@media (min-width: 768px) {
  .header-bar { padding: 16px 30px; }
  
  .badge-pill {
    padding: 8px 16px;
    border-radius: 20px;
    font-size: 18px;
  }
  
  .badge-pill.time { font-size: 22px; }
  
  .sudoku-board {
    max-width: 800px;
    padding: 6px;
    border-radius: 12px;
  }
  
  /* Cell font size override */
  .cell { font-size: 32px !important; }
  
  .controls-area {
    padding: 20px 30px;
    border-top-left-radius: 20px;
    border-top-right-radius: 20px;
  }
  
  .toolbar { margin-bottom: 20px; }
  
  .tool-btn { gap: 6px; font-size: 16px; }
  
  .icon-circle {
    width: 60px; height: 60px;
    border-radius: 16px;
    font-size: 28px;
  }
  
  .key-btn {
    border-radius: 8px;
    font-size: 32px;
  }
  
  .complete-card {
    width: 60%;
    max-width: 400px;
    padding: 40px;
  }
  
  .celebrate-icon { font-size: 64px; }
  .dialog-title { font-size: 32px; }
  .stat-box .val { font-size: 24px; }
  .action-btn { padding: 16px; font-size: 20px; }
}