/**sudoku.wxss**/
page {
  height: 100vh;
  background-color: white;
}

.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  padding: 20rpx;
  box-sizing: border-box;
}

/* 状态栏 */
.status-bar {
  display: flex;
  justify-content: flex-end;
  margin-bottom: 16rpx;
}

.time-display {
  background-color: #f0f0f0;
  padding: 12rpx 24rpx;
  border-radius: 20rpx;
  font-size: 32rpx;
  color: #333;
  font-family: 'SF Pro Display', -apple-system, system-ui, sans-serif;
}

/* 棋盘容器 */
.board-container {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 32rpx;
}

.sudoku-board {
  display: grid;
  background-color: #000;
  border: 4rpx solid #000;
  max-width: 680rpx;
  max-height: 680rpx;
  aspect-ratio: 1;
  width: calc(100vw - 40rpx);
  margin: 0 auto;
  overflow: hidden;
}

/* 4x4网格 */
.sudoku-board[data-size="4"] {
  grid-template-columns: repeat(4, 1fr);
  gap: 1rpx;
}

/* 6x6网格 */
.sudoku-board[data-size="6"] {
  grid-template-columns: repeat(6, 1fr);
  gap: 1rpx;
}

/* 9x9网格 */
.sudoku-board[data-size="9"] {
  grid-template-columns: repeat(9, 1fr);
  gap: 0.5rpx;
}

.cell {
  background-color: white;
  display: flex;
  justify-content: center;
  align-items: center;
  aspect-ratio: 1;
  position: relative;
  border: 1rpx solid #ddd;
}

.cell.selected {
  background-color: #BBDEFB !important;
}

.cell.highlighted {
  background-color: #E3F2FD;
}

.cell.same-number {
  background-color: #81C4E7;
}

.cell.hint-selected {
  background-color: #E8F5E8 !important;
}

.cell.conflict {
  background-color: #FFCCCC !important;
}

.cell.correct {
  background-color: #CCFFCC !important;
}

/* 子区域边框样式 */
.cell.border-bottom-thick {
  border-bottom: 4rpx solid #000 !important;
  margin-bottom: -2rpx;
  position: relative;
  z-index: 1;
}

.cell.border-right-thick {
  border-right: 4rpx solid #000 !important;
  margin-right: -2rpx;
  position: relative;
  z-index: 1;
}

.cell-text {
  font-size: 60rpx;  /* 默认9x9网格字体 */
  font-weight: 400;
  font-family: 'SF Pro Display', -apple-system, system-ui, sans-serif;
}

/* 4x4网格字体 */
.sudoku-board[data-size="4"] .cell-text {
  font-size: 104rpx;
}

/* 6x6网格字体 */
.sudoku-board[data-size="6"] .cell-text {
  font-size: 76rpx;
}

.cell-text.fixed {
  color: black;
}

.cell-text.user {
  color: #2196F3;
}

/* 备注数字样式 */
.cell-notes {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.note-grid {
  display: grid;
  grid-template-columns: 1fr 1fr 1fr;
  grid-template-rows: 1fr 1fr 1fr;
  width: 90%;
  height: 90%;
  gap: 2rpx;
}

.note-position {
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 14rpx;
  color: #666;
  line-height: 1;
  opacity: 0;
}

.note-position.visible {
  opacity: 1;
}

/* 工具栏 */
.toolbar {
  display: flex;
  justify-content: space-around;
  padding: 32rpx 0;
  border-top: 1rpx solid #E0E0E0;
  border-bottom: 1rpx solid #E0E0E0;
}

.tool-button {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 16rpx;
  border-radius: 16rpx;
  min-width: 100rpx;
  position: relative;
}

.tool-button.active {
  background-color: #E3F2FD;
}

.tool-button.disabled {
  opacity: 0.5;
}

.tool-icon {
  font-size: 48rpx;
  margin-bottom: 8rpx;
}

.tool-icon.flipped {
  transform: scaleX(-1);
}

.tool-label {
  font-size: 24rpx;
  color: #666;
}

.badge {
  position: absolute;
  top: 8rpx;
  right: 8rpx;
  background-color: #2196F3;
  color: white;
  font-size: 20rpx;
  padding: 4rpx 8rpx;
  border-radius: 12rpx;
  min-width: 24rpx;
  text-align: center;
}

.badge-on {
  background-color: #4CAF50;
  color: white;
}

.badge-off {
  background-color: #9E9E9E;
  color: white;
}

/* 数字键盘 */
.number-keyboard {
  display: flex;
  justify-content: space-around;
  padding: 32rpx 24rpx;
  background-color: #fafafa;
  border-radius: 16rpx;
  margin: 24rpx 0;
}

.number-key {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 110rpx;
  height: 110rpx;
  border-radius: 12rpx;
  font-size: 80rpx;
  font-weight: 300;
  color: #2196F3;
  font-family: 'SF Pro Display', -apple-system, system-ui, sans-serif;
  background-color: transparent;
  transition: background-color 0.2s;
}

.number-key:active {
  background-color: #E3F2FD;
}

/* 对话框样式 */
.dialog-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
}

.complete-dialog {
  background: linear-gradient(135deg, #4FC3F7, #29B6F6, #03A9F4);
  padding: 48rpx;
  border-radius: 40rpx;
  width: 600rpx;
  max-width: 90vw;
  text-align: center;
  color: white;
  position: relative;
  overflow: hidden;
}

.celebrate-icon {
  font-size: 120rpx;
  animation: celebrate 2s ease-in-out infinite;
  margin-bottom: 32rpx;
  display: block;
}

@keyframes celebrate {
  0%, 100% { transform: scale(1) rotate(0deg); }
  50% { transform: scale(1.1) rotate(10deg); }
}

.dialog-title {
  font-size: 56rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 24rpx;
  display: block;
}

.dialog-subtitle {
  font-size: 36rpx;
  color: white;
  margin-bottom: 40rpx;
  display: block;
  font-weight: 500;
}

.stats-container {
  background-color: rgba(255, 255, 255, 0.2);
  padding: 32rpx;
  border-radius: 24rpx;
  margin-bottom: 48rpx;
}

.stat-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.stat-row:last-child {
  margin-bottom: 0;
}

.stat-label {
  font-size: 32rpx;
  color: white;
  font-weight: 500;
}

.stat-value {
  font-size: 32rpx;
  color: white;
  font-weight: bold;
}

.dialog-buttons {
  display: flex;
  gap: 16rpx;
}

.dialog-btn {
  flex: 1;
  padding: 24rpx 16rpx;
  border-radius: 50rpx;
  font-size: 32rpx;
  font-weight: 600;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
}

.dialog-btn.primary {
  background-color: white;
  color: #03A9F4;
}

.dialog-btn.secondary {
  background-color: rgba(255, 255, 255, 0.2);
  color: white;
}

.btn-icon {
  font-size: 32rpx;
}

/* 响应式调整 */
@media (max-width: 400px) {
  .cell-text {
    font-size: 40rpx;
  }
  
  .number-key {
    width: 80rpx;
    height: 80rpx;
    font-size: 60rpx;
  }
}