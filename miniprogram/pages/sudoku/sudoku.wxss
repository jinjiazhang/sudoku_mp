/**sudoku.wxss**/
page {
  height: 100vh;
  background-color: white;
}

.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  padding: 20rpx;
  box-sizing: border-box;
}

/* 状态栏 */
.status-bar {
  display: flex;
  justify-content: flex-end;
  margin-bottom: 16rpx;
}

.time-display {
  background-color: #f0f0f0;
  padding: 12rpx 24rpx;
  border-radius: 20rpx;
  font-size: 32rpx;
  color: #333;
  font-family: 'SF Pro Display', -apple-system, system-ui, sans-serif;
}

/* 棋盘容器 */
.board-container {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 32rpx;
}

.sudoku-board {
  display: grid;
  gap: 2rpx;
  background-color: #000;
  border: 4rpx solid #000;
  border-radius: 16rpx;
  max-width: 680rpx;
  max-height: 680rpx;
  aspect-ratio: 1;
  width: calc(100vw - 40rpx);
  margin: 0 auto;
}

.cell {
  background-color: white;
  display: flex;
  justify-content: center;
  align-items: center;
  aspect-ratio: 1;
  position: relative;
}

.cell.selected {
  background-color: #BBDEFB !important;
}

.cell.highlighted {
  background-color: #E3F2FD;
}

.cell.same-number {
  background-color: #81C4E7;
}

.cell.hint-selected {
  background-color: #E8F5E8 !important;
}

.cell.conflict {
  background-color: #FFCCCC !important;
}

.cell.correct {
  background-color: #CCFFCC !important;
}

.cell-text {
  font-size: 60rpx;
  font-weight: 400;
  font-family: 'SF Pro Display', -apple-system, system-ui, sans-serif;
}

.cell-text.fixed {
  color: black;
}

.cell-text.user {
  color: #2196F3;
}

/* 工具栏 */
.toolbar {
  display: flex;
  justify-content: space-around;
  padding: 32rpx 0;
  border-top: 1rpx solid #E0E0E0;
  border-bottom: 1rpx solid #E0E0E0;
}

.tool-button {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 16rpx;
  border-radius: 16rpx;
  min-width: 100rpx;
  position: relative;
}

.tool-button.active {
  background-color: #E3F2FD;
}

.tool-button.disabled {
  opacity: 0.5;
}

.tool-icon {
  font-size: 48rpx;
  margin-bottom: 8rpx;
}

.tool-label {
  font-size: 24rpx;
  color: #666;
}

.badge {
  position: absolute;
  top: 8rpx;
  right: 8rpx;
  background-color: #2196F3;
  color: white;
  font-size: 20rpx;
  padding: 4rpx 8rpx;
  border-radius: 12rpx;
  min-width: 24rpx;
  text-align: center;
}

/* 数字键盘 */
.number-keyboard {
  display: flex;
  justify-content: space-around;
  padding: 32rpx 24rpx;
  background-color: #fafafa;
  border-radius: 16rpx;
  margin: 24rpx 0;
}

.number-key {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 110rpx;
  height: 110rpx;
  border-radius: 12rpx;
  font-size: 80rpx;
  font-weight: 300;
  color: #2196F3;
  font-family: 'SF Pro Display', -apple-system, system-ui, sans-serif;
  background-color: transparent;
  transition: background-color 0.2s;
}

.number-key:active {
  background-color: #E3F2FD;
}

/* 对话框样式 */
.dialog-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
}

.complete-dialog {
  background-color: white;
  padding: 60rpx 40rpx 40rpx;
  border-radius: 24rpx;
  width: 600rpx;
  max-width: 90vw;
  text-align: center;
}

.dialog-title {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 32rpx;
  display: block;
}

.dialog-content {
  font-size: 32rpx;
  color: #666;
  margin-bottom: 48rpx;
  display: block;
}

.dialog-buttons {
  display: flex;
  gap: 24rpx;
}

.dialog-btn {
  flex: 1;
  padding: 24rpx;
  border-radius: 12rpx;
  font-size: 32rpx;
  font-weight: 600;
  border: none;
}

.dialog-btn.primary {
  background-color: #2196F3;
  color: white;
}

.dialog-btn.secondary {
  background-color: #f0f0f0;
  color: #333;
}

/* 响应式调整 */
@media (max-width: 400px) {
  .cell-text {
    font-size: 40rpx;
  }
  
  .number-key {
    width: 80rpx;
    height: 80rpx;
    font-size: 60rpx;
  }
}