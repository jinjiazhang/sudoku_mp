.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx;
  height: 100vh;
  box-sizing: border-box;
  background-color: #f0f4f8;
}

.header {
  width: 100%;
  display: flex;
  justify-content: space-between;
  margin-bottom: 40rpx;
}

.level, .score {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.game-board {
  display: grid;
  gap: 20rpx;
  width: 100%;
  max-width: 600rpx;
  aspect-ratio: 1; /* Keep square */
  background: white;
  padding: 20rpx;
  border-radius: 20rpx;
  box-shadow: 0 10rpx 30rpx rgba(0,0,0,0.1);
}

.cell {
  background-color: #e2e8f0;
  border-radius: 12rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 40rpx;
  font-weight: bold;
  color: #2d3748;
  transition: all 0.2s;
  aspect-ratio: 1; /* Make cells square */
}

/* Status styles */
.cell.active {
  /* Just a placeholder, maybe unused */
}

.cell.visible {
  background-color: #4299e1;
  color: white;
  transform: scale(1.05);
}

.cell.hidden {
  background-color: #2b6cb0;
  cursor: pointer;
}
.cell.hidden:active {
  transform: scale(0.95);
}

.cell.revealed {
  background-color: #48bb78; /* Green for correct */
  color: white;
}

.cell.wrong {
  background-color: #f56565; /* Red for wrong */
  color: white;
  animation: shake 0.4s;
}

.hidden-mark {
  color: rgba(255,255,255,0.5);
  font-size: 30rpx;
}

.controls {
  margin-top: 60rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
}

.btn-start, .btn-restart {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  padding: 20rpx 60rpx;
  border-radius: 50rpx;
  font-size: 36rpx;
  font-weight: bold;
  box-shadow: 0 10rpx 20rpx rgba(102, 126, 234, 0.4);
  border: none;
  white-space: nowrap;
  width: auto;
  min-width: 300rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.instruction {
  font-size: 32rpx;
  color: #718096;
  margin-top: 20rpx;
}

/* Modal */
.result-modal {
  position: absolute;
  top: 0; left: 0; right: 0; bottom: 0;
  background: rgba(0,0,0,0.6);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 100;
}

.modal-content {
  background: white;
  padding: 60rpx;
  border-radius: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 70%;
}

.result-title {
  font-size: 48rpx;
  font-weight: 800;
  margin-bottom: 20rpx;
  color: #333;
}

.result-score {
  font-size: 36rpx;
  color: #666;
  margin-bottom: 40rpx;
}

.btn-retry {
  background: #4299e1;
  color: white;
  padding: 20rpx 50rpx;
  border-radius: 40rpx;
}

@keyframes shake {
  0%, 100% { transform: translateX(0); }
  25% { transform: translateX(-10rpx); }
  75% { transform: translateX(10rpx); }
}
