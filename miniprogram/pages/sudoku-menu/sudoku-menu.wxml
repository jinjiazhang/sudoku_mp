<!--sudoku-menu.wxml-->
<view class="page-container">
  <view class="hero-header">
    <view class="game-icon-graphic">
      <view class="s-cell"></view><view class="s-cell filled"></view><view class="s-cell"></view>
      <view class="s-cell filled"></view><view class="s-cell"></view><view class="s-cell filled"></view>
      <view class="s-cell"></view><view class="s-cell filled"></view><view class="s-cell"></view>
    </view>
    <text class="game-title">数独挑战</text>
  </view>

  <view class="menu-content">
    <!-- 有存档 -->
    <view wx:if="{{hasOngoingGame}}" class="save-card" bindtap="continueGame">
      <view class="save-info">
        <text class="save-label">继续游戏</text>
        <text class="save-detail">难度: {{savedGameDifficulty || '未知'}}</text>
      </view>
      <view class="play-arrow">▶</view>
    </view>

    <!-- 新游戏设置 -->
    <view class="new-game-card">
      <view class="card-title">新游戏</view>
      
      <view class="difficulty-control">
        <view class="diff-header">
          <text class="label">选择难度</text>
          <text class="val">{{selectedDifficultyName || selectedDifficulty + '级'}}</text>
        </view>
        <slider 
          class="diff-slider" 
          value="{{selectedDifficulty}}" 
          min="1" 
          max="9"
          activeColor="#3182CE"
          backgroundColor="#EDF2F7"
          block-size="24"
          bindchange="onDifficultyChange"
          bindchanging="onDifficultyChange"
        />
        <view class="diff-labels">
          <text>简单</text>
          <text>困难</text>
        </view>
      </view>

      <button class="start-btn" bindtap="startNewGame">开始新游戏</button>
    </view>
  </view>
</view>
